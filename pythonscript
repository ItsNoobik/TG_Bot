import telebot
import schedule
import time
import threading

# üîê –¢–≤—ñ–π —Ç–æ–∫–µ–Ω —Å—é–¥–∏
bot = telebot.TeleBot("7751489166:AAEp0y6daqWAB2RqYKWF7g8slv9HVK6Db64")

# –¢–≤—ñ–π Telegram user ID (–ø–æ—è—Å–Ω—é –Ω–∏–∂—á–µ —è–∫ –¥—ñ–∑–Ω–∞—Ç–∏—Å—å)
YOUR_TELEGRAM_ID = 123456789

@bot.message_handler(commands=['start'])
@bot.message_handler(func=lambda message: True)
def get_id(message):
    bot.reply_to(message, f"–¢–≤—ñ–π ID: {message.chat.id}")

def send_welcome(message):
    bot.reply_to(message, "–ü—Ä–∏–≤—ñ—Ç! –Ø —â–æ–¥–Ω—è –Ω–∞–≥–∞–¥—É–≤–∞—Ç–∏–º—É –ø—Ä–æ —Ç—Ä–µ–Ω—É–≤–∞–Ω–Ω—è –æ 16:00 üé§")

# –§—É–Ω–∫—Ü—ñ—è, —è–∫—É –±—É–¥–µ–º–æ –∑–∞–ø—É—Å–∫–∞—Ç–∏ –æ 16:00
def send_reminder():
    bot.send_message(YOUR_TELEGRAM_ID, "üé§ –ß–∞—Å —Ç—Ä–µ–Ω—É–≤–∞—Ç–∏—Å—å –≤–æ–∫–∞–ª—É! –ü–∞–º‚Äô—è—Ç–∞–π –ø—Ä–æ –≥–æ–ª–æ—Å —ñ –¥–∏—Ö–∞–Ω–Ω—è üòâ")

# –û–∫—Ä–µ–º–∏–π –ø–æ—Ç—ñ–∫ –¥–ª—è schedule
def schedule_thread():
    schedule.every().day.at("16:00").do(send_reminder)
    while True:
        schedule.run_pending()
        time.sleep(1)

# –ó–∞–ø—É—Å–∫–∞—î–º–æ –ø–æ—Ç—ñ–∫
threading.Thread(target=schedule_thread).start()

# –ó–∞–ø—É—Å–∫–∞—î–º–æ –±–æ—Ç–∞
bot.polling()
